@model ContatoModel
@{
	ViewData["Title"] = "Confirmação de exclusão do contato";
}

<div class="text-center">
	<h3>Você realmente deseja apagar este contato (@Model.Nome)?</h3>
</div>

<div class="d-grid gap-2">
	<a class="btn btn-success" role="button" asp-controller="Contato" asp-action="Apagar" asp-route-id="@Model.Id">Sim, desejo apagar!</a>
	<a class="btn btn-danger" role="button" asp-controller="Contato" asp-action="Index">Não, não desejo apagar!</a>
</div>