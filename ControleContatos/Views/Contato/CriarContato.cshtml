@model ContatoModel
@{
	ViewData["Title"] = "Criar novo contato";
}

<div class="text-center">

	<h1 class="display-4">Cadastrar novo contato</h1>

</div>

<form asp-controller="Contato" asp-action="CriarContato" method="post">

	<div class="mb-3">
		<label for="nome" class="form-label">Nome</label>
		<input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome do contato">
		@Html.ValidationMessageFor(x => x.Nome)
	</div>

	<div class="mb-3">
		<label for="email" class="form-label">E-mail</label>
		<input type="text" asp-for="Email" class="form-control" placeholder="Digite o e-mail do contato">
	</div>

	<div class="mb-3">
		<label for="celular" class="form-label">Celular</label>
		<input type="text" asp-for="Celular" class="form-control" placeholder="Digite o celular do contato">
		@Html.ValidationMessageFor(x => x.Celular)
	</div>

	<div class="d-grid gap-2">
		<button type="submit" class="btn btn-success">Adicionar</button>
		<a class="btn btn-secondary" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
	</div>
</form>